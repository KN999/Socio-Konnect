
{{#if facebook}}

<div class="live">
  <div class="switches container">
    <div class="switch first">
      <p class="left">Send to Facebook</p>
      <label class="right">
        Off
        <input type="checkbox" name="facebook-too" class="PSelect" checked>
        <span class="lever"></span>
        On
      </label>
    </div>
    <div class="switch">
      <p class="left">Send to Facebook ONLY</p>
      <label class="right">
        Off
        <input type="checkbox" name="facebook" class="PSOnly">
        <span class="lever"></span>
        On
      </label>
    </div>
  </div>
</div>

{{else}}

<div class="dead">
  <div class="dead-logo"><i class="fab fa-facebook"></i></div>
  <div class="dead-name">
    <form class="col s12" method="POST" action="/add/facebook">
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <button type="submit" class="z-depth-3 dead-tab-button">Facebook</button>
    </form>
  </div>
</div>

{{/if}}