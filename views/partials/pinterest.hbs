
{{#if pinterest}}

<img src={{pinterest.picture}} alt="profile pic" width="125px" class="circle center-align" style="display: inline-block">
<h5>Profile: {{pinterest.profile}}</h5>

{{else}}

<div class="dead">
  <div class="dead-logo"><i class="fab fa-pinterest"></i></div>
  <div class="dead-name">
    <form class="col s12" method="POST" action="/add/pinterest">
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <button type="submit" class="z-depth-3 dead-tab-button">Pinterest</button>
    </form>
  </div>
</div>

{{/if}}