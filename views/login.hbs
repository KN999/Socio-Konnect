<head>
  <link type="text/css" rel="stylesheet" href="/stylesheets/sign.css"/>
</head>
<div class="box animated fadeInDown">
  <div id="header">
    <div id="cont-lock"><i class="material-icons hero">lock</i></div>
    <div id="bottom-head"><h1>Login</h1></div>
  </div>
   <div class="row set">
    <form class="col s12" method="POST" action="">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" name="email" class="validate" required>
          <label for="email">Email Id</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" name="password" class="validate" required>
          <label for="password">Password</label>
        </div>
      </div>
      <button id="buttonlogintoregister" type="submit">Login</button>
    </form>
  </div>
  <div id="footer-box"><p class="footer-text">Not a member?<span class="sign-up"><a href="/users/register"> Sign up now </a></span></p></div>
</div>
